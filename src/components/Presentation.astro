---
interface Props {
  description: string;
  descriptionEnphasis: string;
}

const { description, descriptionEnphasis } = Astro.props;
---

<h2 class="text-center text-3xl font-medium text-gray-900 dark:text-gray-50 sm:text-6xl">
  {description}
  <span class="animate-text-gradient inline-flex bg-gradient-to-r from-neutral-900 via-slate-500 to-neutral-500 bg-[200%_auto] bg-clip-text leading-tight text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400">{descriptionEnphasis}</span>
</h2>