---
import Icon from './Icon.astro';

interface Icon {
  label: string;
  icon: 'github' | 'linkedin';
  linkTo: string;
}

interface Props {
  icons: Array<Icon>;
}

const { icons } = Astro.props;
---

<nav>
  <ul class="flex justify-end gap-6">
    {icons.map((icon) => <li class="inline-flex w-6 h-6"><Icon icon={icon.icon} label={icon.label} linkTo={icon.linkTo}/></li>)}
  </ul>
</nav>
